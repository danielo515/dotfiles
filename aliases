function pushSnippets(){
 cd ~/mega/programacion/node/vscodePlugins/vscode-node-snippets/
 git add . && git commit -m "Added more stuff" && git push
 cd -
}

function fuzzy_cat(){
  fd "$1" ../ -x cat {}
}

function fuzzy_kill() {
 line=$(ps -ef | fzf -q "'$1" -1 --height 40% --layout reverse -d 20)
 echo $line
}


