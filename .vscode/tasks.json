{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run chezmoi on the saved file",
            "type": "shell",
            "command": "chezmoi",
            "args": [
                "apply",
                "--refresh-externals=false",
                "--source-path",
                "${file}"
            ],
            "group": "build",
        }
    ]
}