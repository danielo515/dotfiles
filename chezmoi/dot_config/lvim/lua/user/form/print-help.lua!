local NuiText = require("nui.text")

---comment
---@param mappings { switch_key : string|string[], exit_key : string }
---@param bufnr number
function renderHelp(mappings, bufnr)
  local text = NuiText("Bru", "Error")
  local row, col = 1, 0
  text:render(bufnr, -1, row, col, row, col)
end

return renderHelp
